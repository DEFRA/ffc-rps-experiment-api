
@startuml Application UI Context
  !include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml
  !include ../descriptions.puml
  
  Person(applicant, "Applicant", "A person applying for funding on behalf of a business")
      
  System(applicationUi, "Application UI", $applicationUiDescription)

  System_Ext(landActions, "Land Based Action System", $landActionsDescription)
  System_Ext(singleFrontDoor, "Single Front Door", "A login and home page for all DEFRA farming")
  System_Ext(identity, "DEFRA.Identity", "A system for managing user identities")

  Rel(applicant, singleFrontDoor, "Logs in to", "http")
  Rel(applicant, applicationUi, "Applies using", "http")
  Rel(applicationUi, landActions, "Sends application to", "event")
  Rel(applicationUi, identity, "Gets user identities from", "http")

@enduml